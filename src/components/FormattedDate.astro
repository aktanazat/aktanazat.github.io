---
import { BLOG_CONFIG } from "../consts";
interface Props {
  date: Date;
}

const { date } = Astro.props;
---

<time datetime={date.toISOString()}>
  {
    date.toLocaleDateString(BLOG_CONFIG.locale || "en-us", {
      year: "numeric",
      month: "short",
      day: "numeric",
    })
  }
</time>
<style>
  time {
    font-family: var(--font-secondary); /* Align with body font */
    font-size: inherit; /* Inherit size from parent in BlogPost layout */
    color: inherit; /* Inherit color from parent */
    font-style: normal;
  }
</style>
