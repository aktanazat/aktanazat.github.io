---
import HeaderLink from "./HeaderLink.astro";
import { SITE_TITLE } from "../consts";
import ThemeToggle from "./ThemeToggle.astro";
import IconLink from "./IconLink.astro";
import { generateURL } from "../utils";
import { NAV_ITEMS, BLOG_CONFIG } from "../consts";
---

<header>
  <div class="header-content">
    <div class="title-row">
      <a class="title" href={generateURL("/", Astro.url)}>
        <h2>{SITE_TITLE}</h2>
      </a>
      <ThemeToggle />
    </div>
    <hr />
    <nav>
      <div class="nav-links">
        {
          NAV_ITEMS.map(item => (
            <HeaderLink href={generateURL(item.link)} aria-label={item.text}>
              {item.text}
            </HeaderLink>
          ))
        }
      </div>
    </nav>
  </div>
</header>

<style>
  header {
    margin-bottom: 2rem;
  }

  .title-row {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .title h2 {
    margin: 0;
    font-size: 1.8em; /* Adjusted for better proportion with body text */
    line-height: 1.2;
    font-weight: 700; /* Bolder for site title */
    color: var(--heading-color);
  }

  hr {
    margin: 0.75rem 0; /* Adjusted margin */
    height: 1px;
    border: none;
    background-color: var(--border-color); /* Use CSS variable */
  }

  nav {
    display: flex;
    justify-content: center;
    flex-wrap: wrap;
    gap: 1rem;
  }

  .nav-links {
    display: flex;
    gap: 1rem; /* Consistent gap */
    flex-wrap: wrap;
  }

  @media (max-width: 768px) {
    .title h2 {
      font-size: 1.75rem;
    }

    .title-row {
      justify-content: space-between;
    }

    nav {
      justify-content: center;
    }

    .nav-links {
      justify-content: center;
    }
  }
</style>