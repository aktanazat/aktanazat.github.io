---
import HeaderLink from "./HeaderLink.astro";
import { SITE_TITLE } from "../consts";
import ThemeToggle from "./ThemeToggle.astro";
import IconLink from "./IconLink.astro";
import { generateURL } from "../utils";
import { NAV_ITEMS, BLOG_CONFIG } from "../consts";
---

<header>
  <a class="title" href={generateURL("/", Astro.url)}>
    <h1>{SITE_TITLE}</h1>
  </a>
  <nav>
    <div class="nav-menu">
      {
        NAV_ITEMS.map(item => (
          <HeaderLink href={generateURL(item.link)} aria-label={item.text}>
            {item.text}
          </HeaderLink>
        ))
      }
    </div>
    <div class="nav-icons">
      <IconLink name="RSS" href={generateURL("/rss.xml")} label="RSS" />
      {
        BLOG_CONFIG["email"] && (
          <IconLink name="Email" href={BLOG_CONFIG["email"]} label="Email" />
        )
      }
      <ThemeToggle />
    </div>
  </nav>
</header>

<style>
  header {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    padding: 1rem 0;
  }

  .title {
    text-align: center;
  }

  nav {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    align-items: center;
  }

  .nav-menu {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 1rem;
  }

  .nav-icons {
    display: flex;
    gap: 0.5rem;
    align-items: center;
  }

  @media (min-width: 768px) {
    header {
      flex-direction: row;
      justify-content: space-between;
      align-items: center;
      padding: 1rem 0;
    }

    .title {
      text-align: left;
    }

    nav {
      flex-direction: row;
      justify-content: flex-end;
      gap: 2rem;
    }

    .nav-menu {
      justify-content: flex-end;
    }
  }
</style>