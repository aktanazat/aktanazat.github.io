---
import HeaderLink from "./HeaderLink.astro";
import { SITE_TITLE } from "../consts";
import ThemeToggle from "./ThemeToggle.astro";
import IconLink from "./IconLink.astro";
import { generateURL } from "../utils";
import { NAV_ITEMS, BLOG_CONFIG } from "../consts";
---

<header>
  <a class="title" href={generateURL("/", Astro.url)}>
    <h1>{SITE_TITLE}</h1>
  </a>
  <nav>
    <div class="nav-links">
      {
        NAV_ITEMS.map(item => (
          <HeaderLink href={generateURL(item.link)} aria-label={item.text}>
            {item.text}
          </HeaderLink>
        ))
      }
    </div>
    <div class="nav-icons">
      <IconLink name="RSS" href={generateURL("/rss.xml")} label="RSS" />
      {
        BLOG_CONFIG["email"] && (
          <IconLink name="Email" href={BLOG_CONFIG["email"]} label="Email" />
        )
      }
      <ThemeToggle />
    </div>
  </nav>
</header>

<style>
  header {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    padding: 20px;
  }
  nav {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 100%;
  }
  .nav-links {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    margin: 10px 0;
  }
  .nav-icons {
    display: flex;
    justify-content: center;
    margin-top: 10px;
  }
  @media (min-width: 600px) {
    header {
      flex-direction: row;
      justify-content: space-between;
      text-align: left;
    }
    nav {
      flex-direction: row;
      align-items: center;
      justify-content: space-between;
    }
    .nav-links {
      justify-content: flex-start;
      margin: 0;
    }
    .nav-icons {
      margin-top: 0;
    }
  }
</style>